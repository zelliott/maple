{
  "name": "MAPLE Extension",
  "description": "Provide readability score on Medline Abstracts",
  "version": "0.7",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "page_action" :
  {
    "default_title" : "Analyze Searches",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.ncbi.nlm.nih.gov/pubmed/*"
      ],
      "js": ["jquery-2.2.4.js", "content.js"]
    }
  ],
  "permissions" : [
    "activeTab",
    "declarativeContent"
  ],
  "web_accessible_resources": ["icon_red.png", "icon_green.png", "icon_yellow.png", "icon_black.png"],
  "manifest_version": 2
}
